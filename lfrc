# interpreter for shell commands
set shell /bin/sh
set shellopts '-eu'

# leave some space at the top and the bottom of the screen
set scrolloff 10

# set internal field separator (IFS)
set ifs "\n"

set relativenumber true

set ratios 1:2:2

map <enter> open
cmd open shell

map gh :cd ~

map gg
map gk :top
map gj :bottom


map e $$EDITOR $f
map oi $$IMAGE_VIEWER $fx
map om $$MEDIA_PLAYER $fx
map od $$DOCUMENT_VIEWER $fx

map oE $$TERMINAL -e $EDITOR $f &> /dev/null &
map oI $$IMAGE_VIEWER $fx &> /dev/null &
map oM $$MEDIA_PLAYER $fx &> /dev/null &
map oD $$DOCUMENT_VIEWER $fx &> /dev/null &

map x $$f
map X !$f

map D :delete

