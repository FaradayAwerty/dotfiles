# interpreter for shell commands
set shell /bin/sh
set shellopts '-eu'

# leave some space at the top and the bottom of the screen
set scrolloff 10

# set internal field separator (IFS)
set ifs "\n"

set relativenumber true

set ratios 1:2:2

map <enter> open
cmd open shell

map gg
map G

map gk :top
map gj :bottom

map gh :cd ~

map e $$EDITOR $f
map E $$TERMINAL -e $EDITOR $f &> /dev/null &

map oi $$IMAGE_VIEWER $fx &> /dev/null &
map om $$MEDIA_PLAYER $fx &> /dev/null &
map od $$DOCUMENT_VIEWER $fx &> /dev/null &

map x $$f
map X !$f

map D :delete

