#! /bin/bash

mkdir -p ~/.config
mkdir -p ~/.config/lf
mkdir -p ~/.newsboat
mkdir -p ~/.w3m

ln -snf $(realpath bashrc) ~/.bashrc
ln -snf $(realpath vimrc) ~/.vimrc
ln -snf $(realpath tmux.conf) ~/.tmux.conf

ln -snf $(realpath bash_profile) ~/.bash_profile
ln -snf $(realpath xinitrc) ~/.xinitrc

ln -snf $(realpath w3m/keymap) ~/.w3m/keymap
ln -snf $(realpath newsboat/config) ~/.newsboat/config

ln -snf $(realpath lfrc) ~/.config/lf/lfrc

